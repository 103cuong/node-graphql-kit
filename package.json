  "description": "ðŸ§˜ðŸš€ A Node.js boilerplate with GraphQL, Prisma, PostgreSQL, MongoDB and awesome tools.",
  "main": "src/index.js",
  "repository": "git@github.com:cuongw/node-graphql-boilerplate.git",
  "author": "Nguyen Duy Cuong <cuongw.me@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon --exec babel-node src/index.js",
    "deploy": "prisma deploy",
    "deploy:force": "prisma deploy --force",
    "clean": "rm -rf dist",
    "dist": "babel src --out-dir dist",
    "build": "npm run clean  && npm run dist",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "pretty-quick â€” staged",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-plugin-root-import": "^6.4.1",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-fp": "^2.3.0",
